<%- include("../partials/user/header.ejs") %>
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/" rel="nofollow">Home</a>
                    <span></span>
                    <%= data.productName %>
                        <span></span>
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product-detail accordion-detail">
                            <div class="row mb-50">
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="detail-gallery">
                                        <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                        <!-- MAIN SLIDES -->
                                        <div class="product-image-slider">
                                            <figure class="border-radius-10">
                                                <img src="/uploads/re-image/<%= data.productImage[0] %>"
                                                    alt="product image">
                                            </figure>
                                            <figure class="border-radius-10">
                                                <img src="/uploads/re-image/<%= data.productImage[1] %>"
                                                    alt="product image">
                                            </figure>
                                            <figure class="border-radius-10">
                                                <img src="/uploads/re-image/<%= data.productImage[2] %>"
                                                    alt="product image">
                                            </figure>

                                        </div>

                                        <div class="slider-nav-thumbnails pl-15 pr-15">

                                            <div><img src="/uploads/re-image/<%= data.productImage[0] %>"
                                                    alt="product image"></div>
                                            <div><img src="/uploads/re-image/<%= data.productImage[1] %>"
                                                    alt="product image"></div>
                                            <div><img src="/uploads/re-image/<%= data.productImage[2] %>"
                                                    alt="product image"></div>

                                        </div>
                                    </div>
                                    <!-- End Gallery -->
                                </div>
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="detail-info">
                                        <h2 class="title-detail">
                                            <%= data.productName %>
                                        </h2>
                                        <div class="product-detail-rating">
                                            <div class="pro-details-brand">
                                                <span> Brands: <a href="shop-grid-right.html">
                                                        <%= data.brand %>
                                                    </a></span>
                                            </div>
                                            <div class="product-rate-cover text-end">
                                                <div class="product-rate d-inline-block">
                                                    <div class="product-rating" style="width:90%">
                                                    </div>
                                                </div>
                                                <span class="font-small ml-5 text-muted"> (25 reviews)</span>
                                            </div>
                                        </div>
                                        <div class="clearfix product-price-cover">
                                            <div class="product-price primary-color float-left">
                                                <ins><span class="text-brand"><i
                                                            class="fas fa-rupee-sign rupee-icon"></i>:<%= data.salePrice
                                                            %></span></ins>
                                                <ins><span class="old-price font-md ml-15"><i
                                                            class="fas fa-rupee-sign rupee-icon"></i>:<%=
                                                            data.regularPrice %></span></ins>
                                                <span class="save-price  font-md color3 ml-15">
                                                    <%= data.productOffer%>%
                                                </span>
                                            </div>
                                        </div>
                                        <div class="bt-1 border-color-1 mt-15 mb-15"></div>
                                        <div class="short-desc mb-30">
                                            <p>
                                                <%= data.description %>
                                            </p>
                                        </div>
                                        <div class="product_sort_info font-xs mb-30">
                                            <ul>
                                                <li>Availability:<span class="in-stock text-success ml-5">
                                                        <%= data.quantity%> Items In Stock
                                                    </span></li>
                                                <li class="mb-10"><i class="fi-rs-refresh mr-5"></i> 30 Day Return
                                                    Policy</li>
                                                <li><i class="fi-rs-credit-card mr-5"></i> Cash on Delivery available
                                                </li>
                                            </ul>
                                        </div>

                                        <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                                        <div class="detail-extralink">
                                            <div class="detail-qty border radius">
                                                <a href="" class="qty-down"
                                                    onclick="updateQuantity(-1); return false;"><i
                                                        class="fi-rs-angle-small-down"></i></a>
                                                <input type="text" name="quantity" value="1" class="qty-val"
                                                    id="product-qty" readonly>
                                                <a href="" class="qty-up" onclick="updateQuantity(1); return false;"><i
                                                        class="fi-rs-angle-small-up"></i></a>
                                            </div>

                                            <div class="product-extra-link2">
                                                <button type="button" class="button button-add-to-cart"
                                                    onclick="addToCart('<%= data._id %>')">Add to Cart</button>
                                                <button type="button" class="button button-buy-now"
                                                    onclick="location.href='/checkout?productId=<%= data._id%>'">Buy
                                                    Now</button>
                                                <a aria-label="Add To Wishlist" class="action-btn hover-up"
                                                    href="shop-wishlist.html"><i class="fi-rs-heart"></i></a>
                                                <a aria-label="Compare" class="action-btn hover-up"
                                                    href="shop-compare.html"><i class="fi-rs-shuffle"></i></a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <script>
       let quantity=1
        function updateQuantity(change) {
            const maxQty = parseInt("<%= data.quantity %>"); 
            const maxLimit = 5;
            let qtyInput = document.getElementById('product-qty'); 

            let currentQty = parseInt(qtyInput.value);
            currentQty = Math.max(1, Math.min(currentQty + change, maxQty, maxLimit));

            qtyInput.value = currentQty;
            quantity=currentQty;
            console.log("Updated Quantity:", currentQty);
        }


        function addToCart(productId) {
            console.log("entered")
           return  window.location.href = `/addCart?productId=${productId}&quantity=${quantity}`;
        }
    </script>


    <%- include("../partials/user/footer.ejs") %>