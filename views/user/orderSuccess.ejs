<%- include('../partials/user/header') %>

<style>
    /* General Styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        color: #333;
        text-align: center;
        padding: 50px 0;
    }

    h1 {
        font-size: 36px;
        color: #39b4ac;
        margin-bottom: 20px;
    }

    p {
        font-size: 18px;
        margin: 10px 0;
    }

    .order-details {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        margin: 20px auto;
        max-width: 600px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .btn-home {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #39b4ac;
        color: #fff;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-home:hover {
        background-color: #2e8b80;
    }
</style>

<main class="main">
    <div class="order-details">
        <h1>Order Successful!</h1>
        <p>Your order has been placed successfully.</p>
        <p><strong>Order ID:</strong> <%= orderId || 0 %></p>
        <a href="/" class="btn-home">Return to Home</a>
    </div>
</main>

<%- include('../partials/user/footer') %>
