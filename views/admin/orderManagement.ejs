<%- include("../partials/admin/header") %>

    
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Order List </h2>
                <p>Lorem ipsum dolor sit amet.</p>
            </div>
            <div>
                <input type="text" placeholder="Search order ID" class="form-control bg-white">
            </div>
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <div class="row gx-3">
                    <div class="col-lg-4 col-md-6 me-auto">
                        <input type="text" placeholder="Search..." class="form-control">
                    </div>
                    <div class="col-lg-2 col-6 col-md-3">
                        <select class="form-select">
                            <option>Status</option>
                            <option>Active</option>
                            <option>Disabled</option>
                            <option>Show all</option>
                        </select>
                    </div>
                    <div class="col-lg-2 col-6 col-md-3">
                        <select class="form-select">
                            <option>Show 20</option>
                            <option>Show 30</option>
                            <option>Show 40</option>
                        </select>
                    </div>
                </div>
            </header> <!-- card-header end// -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Total</th>
                                <th scope="col">Status</th>
                                <th scope="col">Date</th>
                                <th scope="col">view Order</th>
                                
                                <th scope="col" class="text-end"> Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(orders) { %>
                                <% orders.forEach(order => { %>
                                    <tr>
                                        <td>#<%= order._id %></td>
                                        <td><b><%= order.userId.username %></b></td>
                                        <td><%= order.userId.email %></td>
                                        <td>â‚¹<%= order.totalPrice %></td>
                                        <td>
                                            <span class="badge rounded-pill 
                                                <% if (order.status === 'Pending') { %> alert-warning 
                                                <% } else if (order.status === 'Processing') { %> alert-info 
                                                <% } else if (order.status === 'Shipped') { %> alert-primary 
                                                <% } else if (order.status === 'Delivered') { %> alert-success 
                                                <% } else if (order.status === 'Cancelled') { %> alert-danger 
                                                <% } else if (order.status === 'Return Request') { %> alert-secondary 
                                                <% } else if (order.status === 'Returned') { %> alert-dark 
                                                <% } %>">
                                                <%= order.status %>
                                            </span>
                                        </td>
                                        <td><%= order.createdOn.toLocaleDateString() %></td>
                                        <td><a href="/admin/order-details?id=<%= order.orderId %>"
                                            class="btn-small d-block">View</a></td>
                                        <td class="text-end">
                                            <div class="dropdown">
                                                <a href="#" 
                                                   data-bs-toggle="dropdown" 
                                                   class="btn btn-light rounded btn-sm font-sm 
                                                   <% if (order.status === 'Cancelled') { %> disabled <% } %>">
                                                    <i class="material-icons md-more_horiz"></i>
                                                </a>
                                                
                                                <% if (order.status !== "Cancelled") { %>
                                                    <div class="dropdown-menu">
                                                        <% if (order.status === "Delivered") { %>
                                                            <a class="dropdown-item" href="/admin/statusUpdate?id=<%= order._id %>&status=Cancelled">Cancelled</a>
                                                            <a class="dropdown-item" href="/admin/statusUpdate?id=<%= order._id %>&status=Return%20Request">Return Request</a>
                                                            <a class="dropdown-item" href="/admin/statusUpdate?id=<%= order._id %>&status=Returned">Returned</a>
                                                        <% } else { %>
                                                            <a class="dropdown-item" href="/admin/statusUpdate?id=<%= order._id %>&status=Pending">Pending</a>
                                                            <a class="dropdown-item" href="/admin/statusUpdate?id=<%= order._id %>&status=Processing">Processing</a>
                                                            <a class="dropdown-item" href="/admin/statusUpdate?id=<%= order._id %>&status=Shipped">Shipped</a>
                                                            <a class="dropdown-item" href="/admin/statusUpdate?id=<%= order._id %>&status=Delivered">Delivered</a>
                                                            <a class="dropdown-item" href="/admin/statusUpdate?id=<%= order._id %>&status=Cancelled">Cancelled</a>
                                                            <a class="dropdown-item" href="/admin/statusUpdate?id=<%= order._id %>&status=Return%20Request">Return Request</a>
                                                            <a class="dropdown-item" href="/admin/statusUpdate?id=<%= order._id %>&status=Returned">Returned</a>
                                                        <% } %>
                                                    </div>
                                                <% } %>
                                            </div>
                                            
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                        
                    </table>
                </div> 
            </div> <!-- card-body end// -->
        </div> 
    </section> 
<%- include("../partials/admin/footer") %>